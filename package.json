{
  "name": "react-drag-builder-ui",
  "version": "1.0.2",
  "description": "A customizable drag-and-drop component library with Framer Motion animations and styling hooks",
  "main": "dist/react-drag-builder-ui.cjs.js",
  "module": "dist/react-drag-builder-ui.esm.js",
  "types": "types/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/react-drag-builder-ui.esm.js",
      "require": "./dist/react-drag-builder-ui.cjs.js",
      "types": "./types/index.d.ts"
    },
    "./dist/style.css": "./dist/react-drag-builder-ui.css"
  },
  "files": [
    "dist",
    "types",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:lib": "vite build --config vite.lib.config.js",
    "preview": "vite preview",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepublishOnly": "npm run build:lib",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write src/**/*.{js,jsx,ts,tsx}"
  },
  "keywords": [
    "react",
    "component-library",
    "drag-drop",
    "customizable",
    "hooks",
    "framer-motion",
    "typescript",
    "tailwindcss",
    "ui",
    "builder",
    "visual-editor"
  ],
  "author": {
    "name": "Customize UI",
    "email": "support@customize-ui.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/customize-ui.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/customize-ui/issues"
  },
  "homepage": "https://github.com/your-username/customize-ui#readme",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "clsx": "^2.1.0",
    "framer-motion": "^11.0.8",
    "tailwind-merge": "^2.2.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.17",
    "terser": "^5.43.1",
    "typescript": "^5.8.3",
    "vite": "^5.1.0"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ]
}
